ELIF (<ACTION> == 110)
 return <DEFMSG.skillact_breathing>
ELIF (<ACTION> == 111)
 return <DEFMSG.skillact_ridden>
ELIF (<ACTION> == 112)
 return <DEFMSG.skillact_throwing>
ELIF (<ACTION> == 113)
