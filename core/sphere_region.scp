[REGIONTYPE r_default]
ON=@Enter
IF (<SRC.ISPLAYER>) && STRCMPI("<TAG0.MUSIC>","<SRC.REGION.TAG0.MUSIC>")
 IF !(<ISEMPTY <TAG0.MUSIC>>)
  SRC.MIDILIST=<TAG0.MUSIC>
 ELSE
  SRC.MIDILIST=midi_britain1,midi_ForestA,midi_JungleA,midi_MountainA,midi_Plains,midi_Victory
 ENDIF
ENDIF

